
<%= form_for @article, html: { role: "form" } do |f| %>

<form role="form">

  <div class="row">
    <div class="col-md-3">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
        <input type="email" class="form-control" id="%= f.text_field :title %>" placeholder="Enter title">
      </div>

    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="enter Description">
      </div>

    </div>


    <div class="col-md-3">

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price %>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="enter Price">
      </div>

    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity %>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="enter Quantity">
      </div>
    </div>

      <div class="checkbox">
        <label>
          <input type="checkbox"> Check me out
          <%= f.submit %>
        </label>
      </div>
  </div>
</form>


<% end %>


