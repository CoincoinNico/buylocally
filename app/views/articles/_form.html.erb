
<%= form_for @article,:html => {:multipart => true} do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %> </br>

  <%= f.label :description %>
  <%= f.text_field :description %> </br>

  <%= f.label :price %>
  <%= f.number_field :price %> </br>

  <%= f.label :quantity %>
  <%= f.number_field :quantity %> </br>

  <%= f.label :image %>
  <%= f.file_field :article_image, class: "form-control" %>

  <%= f.submit %>

<% end %>