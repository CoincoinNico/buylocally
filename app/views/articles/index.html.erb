<h1>Find all the items uploaded on our website !</h1>

<%  @articles.each do |article| %>
  <div class="row">
    <div class="col-md-3">
    <h2><%= article.title %></h2>
    </div>
    <div class="col-md-3">
      <h3>Description</h3>
      <%= article.description %>
    </div>
    <div class="col-md-3">
      <h3>Price in Euros</h3>
      <%= article.price %> Euros TTC
    </div>
    <div class="col-md-3">
      <h3>Quantity available</h3>
      <%= article.quantity %>
    </div>
    <%= link_to "Show", article %>
    <%= link_to "Edit", edit_article_path(article) %>
    <%= link_to "Delete", article, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

