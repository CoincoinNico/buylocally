<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <ul class="nav nav-pills nav-stacked">


        <li><a href="#">Arts</a></li>
        <li><a href="#">Bijoux</a></li>
        <li><a href="#">Femme</a></li>
        <li><a href="#">Homme</a></li>
        <li><a href="#">Enfants</a></li>
        <li><a href="#">Truc bien Moche</a></li>
      </ul>
    </div>

    <div class="col-sm-9">
      <div class="row">
        <%  @articles.each do |article| %>
          <div class="col-sm-4">
            <div class="thumbnail">
              <img data-src="holder.js/100x100" alt="mettre une photo">
              <div class="caption">
                <h3>Premiere Photo</h3>
                <p><%= article.title %>  <%= article.price %></p>

                <%= link_to article_path(article) do %>
                  <button class="btn btn-primary">Consulter</button>
                <% end %>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
