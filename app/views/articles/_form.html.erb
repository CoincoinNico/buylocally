
<%= form_for @article, html: { role: "form" } do |f| %>

<form role="form">

  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group text-align">
        <%= f.label :title %></br>
        <%= f.text_field :title %></br></br>
        <%= f.label :description %></br>
        <%= f.text_field :description %></br></br>
        <%= f.label :price %></br>
        <%= f.number_field :price %></br></br>
        <%= f.label :quantity %></br>
        <%= f.number_field :quantity %></br></br>
        <%= f.submit %></br>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
      </div>
    </div>
  </div>
</form>

