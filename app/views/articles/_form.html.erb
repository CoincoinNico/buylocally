<%= form_for @article, :html => { :multipart => true } do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </div>
  <h4>Item images</h4>
  <%= f.fields_for :assets do |image| %>
      <p>
        <%= link_to image_tag(image.object.image.url(:thumb)),image.object.image.url(:original)  %>
      </p>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

