<%= form_for @picture, url: article_pictures_path,  :html => { :multipart => true }, :remote => true do |f| %>

  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :file, class: "form-control", id: "file_upload"%>
  </div>



  <div class="form-group" style:"visibility: hidden">
    <%= f.submit "Creer", class: "btn btn-primary"%>
  </div>


<% end %>


<div id="pictures_container">
  <%= render partial: "pictures_list"%>
</div>

