<%= form_for @article, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

